.mdl-ripple {
  background: #fff;
  border-radius: 50%;
  height: 50px;
  left: 0;
  opacity: 0;
  pointer-events: none;
  position: absolute;
  top: 0;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  width: 50px;
  overflow: hidden
}

.mdl-ripple.is-animating {
  transition: transform .9s cubic-bezier(0.25, 0.8, 0.25, 1), width .9s cubic-bezier(0.25, 0.8, 0.25, 1), height .9s cubic-bezier(0.25, 0.8, 0.25, 1), opacity .6s cubic-bezier(0, 0, .2, 1);
  transition: transform .9s cubic-bezier(0.25, 0.8, 0.25, 1), width .9s cubic-bezier(0.25, 0.8, 0.25, 1), height .9s cubic-bezier(0.25, 0.8, 0.25, 1), opacity .6s cubic-bezier(0, 0, .2, 1), -webkit-transform .9s cubic-bezier(0.25, 0.8, 0.25, 1)
}

.mdl-ripple.is-visible {
  opacity: .3
}
