.os-slider
  width 427px
  max-width 427px
  position absolute
  top 0
  left -364px
  transition all 0.45s cubic-bezier(0.35, 0, 0.25, 1)

  &.os-slider-opened
    left 0

.os-slider-content
  background-color #f5f5f5
  width 364px
  max-width 364px

.os-slider-button
  width 64px
  height 64px
  background-color #f5f5f5
  text-align: center

  a
    display block
    line-height 64px

  md-icon
    font-size 26px

os-slider-item
  display block
  box-sizing border-box
  border-left 5px solid #e65100
  padding 22px 32px 22px 35px

  &.os-slider-item--active
    background-color #eeeeee

//  #d40058

os-slider-item-title
  display block
  color #000
  line-height 1.2
  font-size 16px
  font-weight bold

os-slider-item-description
  display block
  font-size 14px
  color rgba(0, 0, 0, 0.541)
  line-height 1.3
  margin-top 10px
