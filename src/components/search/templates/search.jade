.os-search
  .os-search-head(layout="row")
    .os-search-headItem(flex="90")
      input.os-search-query(
        type="search"
        name="{{osSearch.name}}"
        autocomplete="off"
        ng-model="osSearch.searchText"
        placeholder="{{osSearch.placeholder}}"
        ng-focus="osSearch.searchHidden = false"
        ng-keydown="osSearch.keyFromInput($event)"
      )

    .os-search-headItem(flex="40px")
      button.os-search-spyglass(
        type="button"
        ng-click="osSearch.search()"
      )
        md-icon search

    .os-search-headItem(flex="40px")
      button.os-search-clear(

        type="button"
        ng-if="osSearch.searchText"
        ng-click="osSearch.clear()"
      )
        md-icon clear

  .os-search-result(layout="column" ng-if="osSearch.searchText.length > 2 && !osSearch.searchHidden && osSearch.resultsAvailable()")
    .os-search-resultHeaders(layout="row")
      .os-search-resultHeader(flex="{{column.width}}" ng-repeat="(key, column) in osSearch.searchResults") {{ column.title }}

    .os-search-resultItems(flex)
      .os-search-resultItemsContainer(flex="100" layout="row")
        .os-search-resultColumn(flex="{{column.width}}" ng-repeat="(key, column) in osSearch.searchResults")
          .os-search-resultItem(
            ng-repeat="item in column.results"
            )
            .os-search-resultItemColumn(
              ng-click="osSearch.selectResult(item, osSearch.internalSearchProviders[column.providerId].onSelect)"
              data-search-result-index="{{$index}}"
              data-provider-id="{{column.providerId}}"
              tabindex="0"
              ng-keydown="osSearch.keyFromSearchResult($event, result, column.providerId, searchProviders[column.providerId].onSelect)"
            ) {{item.text}}
