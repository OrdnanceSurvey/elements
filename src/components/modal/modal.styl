md-dialog
  &.md-os-theme
    background-color #f9f9f9
    ambient-shadow()
    color #000000
    padding 130px 45px
    box-sizing border-box
    margin-bottom 50px

    .md-title
      font-size 40px
      text-align center

    .md-dialog-content-body
      font-size 16px

    .os-modal-content-text
      text-align center

    &.md-dialog-fullscreen
      min-height 100%
      min-width 100%
      border-radius 0

